<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextStyleFontBold">
        <item name="android:font">@font/sf_pro_display_bold</item>
    </style>

    <style name="TextStyleFontRegular">
        <item name="android:font">@font/sf_pro_display_regular</item>
    </style>

    <style name="TextStyleFontLight">
        <item name="android:font">@font/sf_pro_display_bold</item>
    </style>

    <style name="HeaderStyleDefault" parent="TextStyleFontRegular">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DescriptionStyleDefault" parent="TextStyleFontRegular">
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.5</item>
    </style>

    <!--Implementation-->
    <style name="HeaderStyleDefaultImpl" parent="HeaderStyleDefault">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DescriptionStyleDefaultImpl" parent="DescriptionStyleDefault">
        <item name="android:textSize">16sp</item>
    </style>
</resources>