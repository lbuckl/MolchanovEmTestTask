<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_error_title"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="17dp"
        android:fontFamily="@font/sf_pro_display_bold"
        android:gravity="center"
        android:minLines="2"
        android:textColor="@color/black"
        android:textSize="24sp"
        tools:text="Ошибка при получении данных с сервера" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_error_description"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/sf_pro_display_bold"
        android:gravity="center"
        android:minLines="2"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:text="Проверьте подключение и попробуйте еще раз" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dialog_error_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_error_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="13dp"
        android:fontFamily="@font/sf_pro_display_bold"
        android:gravity="center"
        android:text="Вернуться"
        android:textAllCaps="false"
        android:textSize="16sp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_error_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/sf_pro_display_regular"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="Отмена" />

</androidx.appcompat.widget.LinearLayoutCompat>